<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3E3E"

    tools:context=".Venecia_View">

    <TextView
        android:id="@+id/madrid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Venecia"
        android:textColor="#5AEEC2"
        android:textSize="29.2dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_top_imagen"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/guide_line_top" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="401dp"
        android:layout_height="213dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_bot_imagen"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_left_imagen"
        app:layout_constraintStart_toStartOf="@+id/guide_line_right_imagen"
        app:layout_constraintTop_toTopOf="@+id/guide_line_top_imagen"
        app:srcCompat="@drawable/venecia" />

    <View
        android:id="@+id/palacio_real_view"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:background="@drawable/shape"
        app:circularflow_defaultRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/bot_palacio_real"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/top_palacio_real" />

    <View
        android:id="@+id/plaza_mayor_view"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toTopOf="@+id/bot_plaza_mayor"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/top_plaza_mayor" />


    <ImageView
        android:id="@+id/sonido_palacio_real"
        android:layout_width="199dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        android:rotationY="182"
        app:layout_constraintBottom_toTopOf="@+id/bot_palacio_real"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/top_palacio_real"
        app:srcCompat="@drawable/sonido" />

    <ImageView
        android:id="@+id/sonido_plaza_mayor"
        android:layout_width="199dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bot_plaza_mayor"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/top_plaza_mayor"
        app:srcCompat="@drawable/sonido" />

    <Button
        android:id="@+id/play_piazza_san_marcos"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_marginEnd="230dp"
        android:background="@drawable/play"
        app:layout_constraintBottom_toTopOf="@+id/bot_palacio_real"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/top_palacio_real" />

    <Button
        android:id="@+id/play_puente_de_rialto"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_marginEnd="230dp"
        android:background="@drawable/play"
        app:layout_constraintBottom_toTopOf="@+id/bot_plaza_mayor"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/top_plaza_mayor" />


    <TextView
        android:id="@+id/palacio_real_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Piazza San Marcos"
        android:textColor="#5AEEC2"
        android:textSize="17.22dp"
        app:layout_constraintBottom_toTopOf="@+id/top_palacio_real"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/plaza_mayor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Puente de Rialto"
        android:textColor="#5AEEC2"
        android:textSize="17.22dp"
        app:layout_constraintBottom_toTopOf="@+id/top_plaza_mayor"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/bot_palacio_real" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_marginEnd="280dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_top_imagen"
        app:layout_constraintEnd_toStartOf="@+id/guideline44"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/guide_line_top"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/menu"
        android:layout_width="22dp"
        android:layout_height="17.6dp"
        android:layout_marginStart="290dp"
        android:background="@drawable/menu"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_top_imagen"
        app:layout_constraintEnd_toStartOf="@+id/right_audios"
        app:layout_constraintStart_toStartOf="@+id/left_audios"
        app:layout_constraintTop_toTopOf="@+id/guide_line_top" />
    <LinearLayout
        android:id="@+id/guardar_venecia"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/guardado_view"
        app:layout_constraintBottom_toTopOf="@+id/guideline52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline44"
        app:layout_constraintTop_toTopOf="@+id/bot_museo_del_prado" >

        <Button
            android:id="@+id/boton_guardar_venecia"
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/botonsinguardar" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_audios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_audios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_left_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_right_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7931873" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_top_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_bot_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_palacio_real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bot_palacio_real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_plaza_mayor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bot_plaza_mayor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_museo_del_prado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bot_museo_del_prado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>